{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Build Book",
			"command": "mdbook",
			"args": [
				"build",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		},
		{
			"type": "shell",
			"label": "Serve Book",
			"command": "mdbook",
			"args": [
				"serve",
				"--open",
				"--port",
				"8000"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
		}
	]
}